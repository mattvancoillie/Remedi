<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#110F52</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:padding">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorLink">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="lblStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
        <item name="android:padding">5sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/cardview_light_background</item>
    </style>

    <style name="editStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:contentDescription">Enter first name</item>
        <item name="android:ems">10</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:padding">10sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="lblTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:padding">10sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">25sp</item>
    </style>

</resources>